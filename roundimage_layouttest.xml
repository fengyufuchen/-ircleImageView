<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <com.sachin.zhihu.views.RoundImageView
         android:id="@+id/roundImageView_1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/mydog"
         android:layout_margin="10dp"
         />

     <com.sachin.zhihu.views.RoundImageView
         android:id="@+id/roundImageView_2"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:src="@mipmap/mydog"
         android:layout_margin="10dp"
         />

     <com.sachin.zhihu.views.RoundImageView
         android:id="@+id/roundImageView_3"
         app:round_type="round"
         app:borderRadius="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/davidgarrett"
         android:layout_margin="10dp"
         />

     <com.sachin.zhihu.views.RoundImageView
         app:round_type="round"
         app:borderRadius="40dp"
         android:id="@+id/roundImageView_4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/david0637147"
         android:layout_margin="10dp"
         />
     <com.sachin.zhihu.views.RoundImageView
         app:round_type="round"
         app:borderRadius="60dp"
         android:id="@+id/roundImageView_5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/david0"
         android:layout_margin="10dp"
         />



 </LinearLayout>


</ScrollView>